<section id="project" class="panel">
    <div class="each-project">
        <!-- loop through all our team members and put their info on the page -->
        {{#each work}} 
        <img src="images/{{background}}" alt="background image" id="work-background">

        {{!-- This is like a JS for Each loop --}}
        <div class="work-panel"> 
            <h2 id="project-name">{{Project}}</h2>
            <h3 id="my-role">{{Role}}</h3>
            <p id="project-detail">{{Detail}}</p>
            
            
            <a href="{{Link}}" class ="seemore-button"> See more</a>    
        </div>

        {{/each}}
        
    </div>
    </div>
</section>

